{{#if this.hasPeople}}
  <ol ...attributes>
    {{#each this.capitalizedPeople as |person|}}
      {{yield person}}
    {{/each}}
  </ol>
{{/if}}

<input onKeyUp={{action (mut this.newName) value="target.value"}} value={{this.newName}}>
<button onclick={{action this.createPerson this.newName}}>add</button>
